normalize()
base()
grid()
headers()
// establish-baseline()
img-path = '/img/'

font-face(proxima-nova, '/fonts/proxima')

body
  padding: 50px
  // debug-vertical-alignment()

.section
  clear: both
  margin-top: 30px

.text
  paragraph()

.link
  link()

blockquote
  blockquo()

//
// buttons
//

.button
  button()
  filter: blah

.button-color
  button: #D9C07F

.button-small
  button: red 'small'

.button-medium
  button(purple, 'medium', textColor: #fff)

.button-large
  button: #7518D9 'large'

.button-custom-size
  button: black 30

.button-disabled
  button()
  button-disabled()

.simple-button
  simple-button()

.simple-color
  simple-button: red

.simple-size
  simple-button: green 20

.simple-disabled
  simple-button()
  button-disabled()

//
// code
//

.code
  code()

.pre
  pre()

//
// forms
//

.input, .input2
  input()

.input-search
  input-search()

.input-disabled
  input()
  input-disabled()

.input-error
  input()
  input-error()

.input-warning
  input()
  input-warning()

.input-success
  input()
  input-success()

.field
  field: 300px

.field-error
  field: 300px
  field-error()

.field-warning
  field: 300px
  field-warning()

.field-success
  field: 300px
  field-success()

.label
  label()

//
// gradients
//

.gradients > div
  size: 300px 100px

.gradient
  background: linear-gradient(top, #D94B42, #D97F35)

.gradient-multiple-stops
  background: linear-gradient(top, #D94B42, 20% #D97F35, 40% #D9B95C, 60% #A7D952, 80% #5FD4D9, 100% #786BD9)

.gradient-mixin
  gradient: #D988D0 #7429D9

.simple-gradient
  simple-gradient: #D94734 30%

.noise-gradient
  noise-gradient: #80D9B0 #88C5D9

.simple-noise-gradient
  simple-noise-gradient: #D9CC55

.radial-gradient
  background: radial-gradient(red, white, blue)

//
// grid
//

//
// ui
//

.bubbles
  & > *
    margin: 20px 0
    height: 100px
  .default
    bubble()
  .right-red
    bubble: right red 300px
    color: lighten(red, 80%)
  .center-green
    bubble(pointer: center, color: green, width: 300px)
    color: lighten(green, 80%)
  .left
    bubble(left, width: 300px)
  .bottom-right
    bubble: bottom right #EEE 300px
  .bottom-left
    bubble: bottom left #EEE 300px
  .top-right
    bubble: top right #EEE 300px
  .top-left
    bubble: top left #EEE 300px
  .left-top
    bubble: left top #EEE 300px
  .right-top
    bubble: right top #EEE 300px
  .left-bottom
    bubble: left bottom #EEE 300px
  .right-bottom
    bubble: right bottom #EEE 300px
  .bottom-center
    bubble: bottom center #EEE 300px
  .left-center
    bubble: left center #EEE 300px
  .right-center
    bubble: right center #EEE 300px
  .top-center
    bubble: top center #EEE 300px
  .alt-color
    bubble(triangleColor: red)
